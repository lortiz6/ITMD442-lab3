extends layout

block content
  .edit-container
    h1.h1-edit Edit Contact
    form.edit-form(method='POST', action=`/contacts/${contact.id}?_method=PUT`)
      table.contact-table
        tr
          td
            label(for='firstName') First Name:
          td
            input(type='text', name='firstName', value=contact.firstName, id='firstName', required)
        tr
          td
            label(for='lastName') Last Name:
          td
            input(type='text', name='lastName', value=contact.lastName, id='lastName', required)
        tr
          td
            label(for='email') Email Address:
          td
            input(type='email', name='email', value=contact.email, id='email')
        tr
          td
            label(for='notes') Notes:
          td
            textarea(name='notes', id='notes')= contact.notes
      button.btn-save(type='submit') Save
